{
  "name": "latvian-author-website",
  "version": "1.0.0",
  "description": "Showcase website for Latvian children's book author Ilze Skrastiņa",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand --forceExit",
    "test:unit": "jest tests/models.test.js tests/api.test.js --runInBand --forceExit",
    "test:integration": "jest tests/integration.test.js tests/admin-auth.test.js --runInBand --forceExit",
    "test:security": "jest tests/security.test.js --runInBand --forceExit",
    "test:email": "jest tests/email-functionality.test.js --runInBand --forceExit",
    "test:content": "jest tests/content-management.test.js --runInBand --forceExit",
    "test:errors": "jest tests/error-handling.test.js --runInBand --forceExit",
    "test:complete": "jest tests/complete-integration.test.js --runInBand --forceExit",
    "test:all": "node scripts/run-integration-tests.js",
    "test:full": "node scripts/integration-test.js",
    "security:audit": "node scripts/security-audit.js",
    "init-db": "node scripts/init-database.js",
    "deploy:check": "npm run security:audit && npm run test:full",
    "deploy:production": "NODE_ENV=production npm start",
    "backup:db": "cp database.sqlite database-backup-$(date +%Y%m%d_%H%M%S).sqlite 2>/dev/null || echo 'Database backup skipped'",
    "logs:error": "tail -f logs/error.log 2>/dev/null || echo 'Error log not found'",
    "logs:access": "tail -f logs/access.log 2>/dev/null || echo 'Access log not found'",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "railway:predeploy": "node scripts/railway-deploy.js",
    "railway:postdeploy": "node scripts/railway-postdeploy.js",
    "railway:test": "node scripts/test-railway-deployment.js",
    "generate:credentials": "node scripts/generate-credentials.js"
  },
  "keywords": [
    "website",
    "author",
    "children-books",
    "latvian"
  ],
  "author": "Ilze Skrastiņa",
  "license": "MIT",

  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dompurify": "^3.0.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
