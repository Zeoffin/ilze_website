# Production Environment Configuration
# Copy this file to .env in production and update with actual values

# Server configuration
PORT=3000
NODE_ENV=production

# Session secret - MUST be changed to a secure random string
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION

# Database configuration
# For production, consider using a more robust database like PostgreSQL
DATABASE_PATH=./database.sqlite

# Email configuration for contact form
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM=your-production-email@gmail.com

# Admin credentials - MUST be changed for production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# Security settings
BCRYPT_ROUNDS=12
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# SSL/TLS (if using HTTPS)
SSL_KEY_PATH=
SSL_CERT_PATH=

# CORS settings (if needed)
CORS_ORIGIN=https://yourdomain.com

# Content Security Policy
CSP_REPORT_URI=